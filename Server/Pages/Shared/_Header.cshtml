@{
    var navLinks = new[]
    {
        new {name = "Home", href = "/apps/home"},
        new {name = "Chat", href = "/chat"},
        new {name = "Pages", href = "/apps/pages"},
        new {name = "Services", href = "/apps/services"},
        new {name = "Pricing", href = "/apps/pricing"},
        new {name = "Contact", href = "/apps/contact"},
    };
    var pageLinks = new[]
    {
        new {name = "OTP", href = "/apps/OTP"},
        new {name = "blog grid", href = "/apps/blog-grid"},
        new {name = "blog listing", href = "/apps/blog-list"},
        new {name = "blog details", href = "/apps/blog-details"},
        new {name = "Reset Password", href = "/apps/reset-password"},
        new {name = "Login", href = "/apps/Login"},
        new {name = "404", href = "/404"},
        new {name = "Terms & condtion", href = "/apps/terms"},
    };
}
<link rel="stylesheet" href="~/css/_Header.css" />

<nav class="position-relative pt-4 d-flex align-items-center mb-4">
    <div class="d-flex align-items-center">
        <div class="nav-drop me-4">
            <i class="fa-solid fa-bars menu-btn" style="padding: 6px 8px;"></i>
        </div>
        <a href="/">
            <img src="~/imgs/logo.svg" alt="logo" />
        </a>
    </div>
    <div class="w-100 d-flex justify-content-center text-white links-block">
        <ul class="d-flex list-unstyled m-0">
            @foreach (var i in navLinks)
            {
                if (i.name == "Pages")
                {
                    <li class="p-2 ms-4 fs-5 links position-relative link-drop">
                        <div>
                            <a href="@i.href" >@i.name</a>
                            <i class="fa-solid fa-chevron-down ms-2" style="font-size: 14px;"></i>
                        </div>
                        <ul class="position-absolute ul-pages">
                            @foreach (var p in pageLinks)
                            {
                                <li class="py-1">
                                    <a href="@p.href" class="d-block text-capitalize light-text">@p.name</a>
                                </li>
                            }
                        </ul>
                    </li>
                } else
                {
                    <li class="p-2 ms-4 fs-5 links">
                        <a href="@i.href">@i.name</a>
                    </li>
                }
            }
        </ul>
    </div>
    <div>
        <a href="/apps/login" class="btn-login header-login-btn">Login Now</a>
    </div>
</nav>

<div class="model">
    <div class="model__wrapper">
        <div class="light-text">
            <div class="d-flex justify-content-between align-items-center" style="padding: 20px 24px;">
                <h2 class="model__title">Back</h2>
                <i class="fa-solid fa-xmark close-btn"></i>
            </div>
            <ul class="ps-3 list-unstyled">
                @foreach (var i in navLinks)
                {
                    if (i.name == "Pages")
                    {
                        <li class="p-2 ps-4 model__links fs-5 position-relative">
                            <div class="d-flex justify-content-between align-items-center fw-bold sublink-toggle">
                                <a class="d-block flex-grow-1" href="javascript:void(0)">@i.name</a>
                                <i class="fa-solid fa-chevron-down ms-2" style="font-size: 14px;"></i>
                            </div>
                            <ul class="model__sublink">
                                @foreach (var p in pageLinks)
                                {
                                    <li class="py-1">
                                        <a href="@p.href" class="d-block text-capitalize light-text">@p.name</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="p-2 ps-4 fs-5 fw-bold model__links">
                            <a href="@i.href" class="d-block ">@i.name</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
<div class="cover"></div>

<script src="~/js/_Header.js"></script>
